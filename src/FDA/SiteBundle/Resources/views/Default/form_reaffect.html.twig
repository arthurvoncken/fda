{% extends "layout.html.twig" %}
{% block body %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
<div>

{{ form_start(form, {'attr': {'class': 'form-vertical'}}) }}
{{ form_errors(form) }}


<div class='form-group'>
	{{ form_label(form.auteur, "Reaffecter l'auteur") }}
	<p class="help-block">Pour affecter à plusieurs auteurs, mettre un ";" entre les noms. Orthographe exacte nécessaire!</p>
	{{ form_errors(form.auteur) }}
	<div>
		{{ form_widget(form.auteur)}}
	</div>
</div>

{{ form_widget(form) }}
<input type="submit" class="btn btn-primary" value="Valider"/>
{{ form_end(form) }}
</div>
{% endblock %}